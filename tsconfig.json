{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "es2019",
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "bin",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
